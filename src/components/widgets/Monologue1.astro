<section class="py-20 bg-black">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto">
      <div id="response-container-1" class="text-white text-3xl font-bold leading-tight text-center"></div>
      <script is:inline>
        // Fetch the JSON file
        fetch('https://raw.githubusercontent.com/Alice-gnosis/ai/main/output.json')
          .then((response) => response.json())
          .then((data) => {
            // Select a random response from the data array
            const randomIndex = Math.floor(Math.random() * data.length);
            const randomResponse = data[randomIndex].response;

            // Format the random response text
            const formattedResponse = randomResponse
              .split(' ')
              .map((word) => {
                const randomStyle = Math.random();
                if (randomStyle < 0.2) {
                  // Capitalize word
                  return word.toUpperCase();
                } else if (randomStyle < 0.4) {
                  // Apply bold style
                  return `<span class="font-bold">${word}</span>`;
                } else if (randomStyle < 0.6) {
                  // Apply underline style
                  return `<span class="underline">${word}</span>`;
                } else {
                  // Normal word
                  return word;
                }
              })
              .join(' ');

            // Display the formatted random response on the front end
            const responseContainer = document.getElementById('response-container-1');
            responseContainer.innerHTML = formattedResponse;
          })
          .catch((error) => {
            console.error('Error fetching random response:', error);
          });
      </script>
      <style is:inline>
        @import url('https://fonts.googleapis.com/css2?family=Syne+Tactile&display=swap');
        #response-container {
          font-family: 'Syne Tactile', cursive;
        }
      </style>
    </div>
  </div>
</section>
